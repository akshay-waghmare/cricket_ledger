{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    // Update moduleResolution to match module setting
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./",
    // Disable strict mode to prevent implicit-any and unknown-type errors
    "strict": false,
    // Allow JavaScript files in project
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // Add module detection settings for hybrid ESM/CJS support
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}