<div class="container mt-5">
  <h1 class="mb-4">Subscription Plans</h1>
  
  <div class="row">
    <!-- Free Plan -->
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-header bg-light">
          <h4 class="my-0 text-center">Free</h4>
        </div>
        <div class="card-body d-flex flex-column">
          <h1 class="card-title text-center">$0<small class="text-muted">/mo</small></h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li class="mb-2">✅ Basic match statistics</li>
            <li class="mb-2">✅ Limited bet tracking</li>
            <li class="mb-2">✅ Single user account</li>
            <li class="mb-2">❌ Advanced analytics</li>
            <li class="mb-2">❌ Historical data</li>
          </ul>
          <form action="/subscription/subscribe" method="POST" class="mt-auto">
            <input type="hidden" name="plan" value="free">
            <button type="submit" class="btn btn-outline-primary w-100">Select Free Plan</button>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Basic Plan -->
    <div class="col-md-4 mb-4">
      <div class="card h-100 border-primary">
        <div class="card-header bg-primary text-white">
          <h4 class="my-0 text-center">Basic</h4>
        </div>
        <div class="card-body d-flex flex-column">
          <h1 class="card-title text-center">$19<small class="text-muted">/mo</small></h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li class="mb-2">✅ Basic match statistics</li>
            <li class="mb-2">✅ Unlimited bet tracking</li>
            <li class="mb-2">✅ Single user account</li>
            <li class="mb-2">✅ Basic analytics</li>
            <li class="mb-2">❌ Historical data</li>
          </ul>
          <form action="/subscription/subscribe" method="POST" class="mt-auto">
            <input type="hidden" name="plan" value="basic">
            <button type="submit" class="btn btn-primary w-100">Subscribe to Basic</button>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Premium Plan -->
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-header bg-success text-white">
          <h4 class="my-0 text-center">Premium</h4>
        </div>
        <div class="card-body d-flex flex-column">
          <h1 class="card-title text-center">$49<small class="text-muted">/mo</small></h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li class="mb-2">✅ Advanced match statistics</li>
            <li class="mb-2">✅ Unlimited bet tracking</li>
            <li class="mb-2">✅ Multiple user accounts</li>
            <li class="mb-2">✅ Advanced analytics</li>
            <li class="mb-2">✅ Historical data (up to 5 years)</li>
          </ul>
          <form action="/subscription/subscribe" method="POST" class="mt-auto">
            <input type="hidden" name="plan" value="premium">
            <button type="submit" class="btn btn-success w-100">Subscribe to Premium</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <div class="alert alert-info mt-3">
    <strong>Note:</strong> This is a demo implementation. In a production environment, we would integrate with a payment processor like Stripe.
  </div>
</div>
