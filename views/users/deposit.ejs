<div class="container mt-5">
  <h1>Deposit Funds for <%= user.id %></h1>
  
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger">
      <%= error %>
    </div>
  <% } %>
  
  <div class="card mb-4">
    <div class="card-header">
      <h5>Current Balance: <%= user.balance.toFixed(2) %></h5>
    </div>
    <div class="card-body">
      <form action="/users/<%= user.id %>/deposit" method="POST">
        <div class="mb-3">
          <label for="amount" class="form-label">Deposit Amount</label>
          <input type="number" class="form-control" id="amount" name="amount" step="0.01" min="0.01" required>
        </div>
        <button type="submit" class="btn btn-success">Deposit</button>
        <a href="/users/<%= user.id %>" class="btn btn-secondary">Cancel</a>
      </form>
    </div>
  </div>
  
  <div class="mt-4">
    <a href="/users/<%= user.id %>/edit-balance" class="btn btn-primary me-2">Edit Balance</a>
    <a href="/users/<%= user.id %>/withdraw" class="btn btn-warning">Withdraw</a>
  </div>
</div>
