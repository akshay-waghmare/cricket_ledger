<h1 class="mb-4">Dashboard</h1>

<div class="row">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        <h3>Account Information</h3>
      </div>
      <div class="card-body">
        <p><strong>Name:</strong> <%= user.name %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <% if (user.subscription) { %>
          <p>
            <strong>Subscription:</strong> 
            <%= user.subscription.plan.charAt(0).toUpperCase() + user.subscription.plan.slice(1) %> 
            (Expires: <%= new Date(user.subscription.expiresAt).toLocaleDateString() %>)
          </p>
        <% } else { %>
          <p><strong>Subscription:</strong> None</p>
          <a href="/subscription/plans" class="btn btn-primary">Upgrade Account</a>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        <h3>Quick Actions</h3>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <a href="/matches" class="btn btn-primary">View Matches</a>
          <a href="/bets" class="btn btn-success">Your Bets</a>
          <a href="/users/profile" class="btn btn-info">Update Profile</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3>Recent Activity</h3>
      </div>
      <div class="card-body">
        <p class="text-muted">No recent activity to display.</p>
        <!-- Activity would be populated from the database -->
      </div>
    </div>
  </div>
</div>
