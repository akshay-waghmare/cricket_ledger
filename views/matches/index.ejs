<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Cricket Matches</h1>
  <a href="/matches/create" class="btn btn-primary">Create New Match</a>
</div>

<% if (matches && matches.length > 0) { %>
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">Active Matches</h5>
    </div>
    <div class="card-body p-0">
      <table class="table table-striped table-hover mb-0">
        <thead>
          <tr>
            <th>Match ID</th>
            <th>Teams</th>
            <th>Bets</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% matches.forEach(match => { %>
            <tr>
              <td><%= match.match_id %></td>
              <td><%= match.teams.join(' vs ') %></td>
              <td><%= match.bets.length %></td>
              <td>
                <div class="btn-group btn-group-sm">
                  <a href="/matches/<%= match.match_id %>" class="btn btn-info">View</a>
                  <a href="/matches/<%= match.match_id %>/exposure" class="btn btn-warning">Exposures</a>
                  <a href="/matches/<%= match.match_id %>/settle" class="btn btn-success">Settle</a>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
<% } else { %>
  <div class="alert alert-info">
    No matches have been created yet. Click the "Create New Match" button to get started.
  </div>
<% } %>

<%- include('../partials/footer') %>